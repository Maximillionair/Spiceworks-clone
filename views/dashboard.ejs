<%- include('partials/header', {title: 'Dashboard', path: '/dashboard'}) %>

<div class="container mt-4">
  <!-- Stats Cards Row -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title">My Open Tickets</h5>
          <h2 id="open-tickets-count"><%= stats.open %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title">In Progress</h5>
          <h2 id="in-progress-tickets-count"><%= stats.inProgress %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title">Resolved</h5>
          <h2 id="resolved-tickets-count"><%= stats.resolved %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Create Ticket and Recent Tickets Row -->
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Create New Ticket</h5>
          <form id="ticket-form" action="/api/tickets" method="POST">
            <div class="form-group mb-3">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group mb-3">
              <label for="category">Category</label>
              <select class="form-control" id="category" name="category" required>
                <option value="">Select a category</option>
                <option value="Hardware Issue">Hardware Issue</option>
                <option value="Software Issue">Software Issue</option>
                <option value="Network Issue">Network Issue</option>
                <option value="Account Issue">Account Issue</option>
                <option value="Other">Other</option>
              </select>
            </div>
            <div class="form-group mb-3">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Ticket</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Recent Tickets</h5>
          <ul id="recent-tickets-list" class="list-unstyled">
            <% if (recentTickets && recentTickets.length > 0) { %>
              <% recentTickets.forEach(ticket => { %>
                <li class="mb-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <strong><%= ticket.title %></strong>
                    <span class="badge badge-<%= ticket.status.toLowerCase().replace(' ', '-') %>"><%= ticket.status %></span>
                  </div>
                  <small class="text-muted"><%= new Date(ticket.createdAt).toLocaleDateString() %></small>
                </li>
              <% }); %>
            <% } else { %>
              <li>No recent tickets</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<script type="module" src="/js/dashboard.js"></script>