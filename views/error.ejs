<%- include('partials/header', {title: 'Error', path: ''}) %>

<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title text-danger">Error</h2>
      <p class="card-text"><%= message %></p>
      
      <% if (process.env.NODE_ENV === 'development' && error && error.stack) { %>
        <div class="mt-4">
          <h5>Stack Trace:</h5>
          <pre class="bg-light p-3 rounded"><%= error.stack %></pre>
        </div>
      <% } %>
      
      <div class="mt-4">
        <a href="/" class="btn btn-primary">Return to Home</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 